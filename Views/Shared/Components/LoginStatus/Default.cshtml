@model SportsStore.Areas.Identity.Data.ApplicationUser

@* Model ở đây là đối tượng ApplicationUser nếu đã đăng nhập, hoặc null nếu chưa đăng nhập *@

<ul class="navbar-nav d-flex flex-row align-items-center">
@if (Model != null)
{
    // TRẠNG THÁI ĐÃ ĐĂNG NHẬP
    // Sử dụng thuộc tính Name thay cho FullName nếu bạn không có trường FullName
    var displayName = Model.FullName ?? Model.UserName; 

    <li class="nav-item me-3 d-flex align-items-center">
        <span class="text-white">
            <i class="fas fa-user-circle me-1"></i> Xin chào, @displayName!
        </span>
    </li>
    
    // Nút Đăng Xuất
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post">
            <button id="logout" type="submit" class="btn btn-sm btn-danger text-white">
                Đăng xuất
            </button>
        </form>
    </li>
}
else
{
    // TRẠNG THÁI CHƯA ĐĂNG NHẬP
    <li class="nav-item me-2">
        <a class="btn btn-sm btn-warning btn-identity text-white" asp-area="Identity" asp-page="/Account/Register">
            Đăng ký
        </a>
    </li>
    <li class="nav-item">
        <a class="btn btn-sm btn-outline-light btn-identity" asp-area="Identity" asp-page="/Account/Login">
            Đăng nhập
        </a>
    </li>
}
</ul>