@model Order

<h2>Check out now</h2>
<p>Vui lòng nhập thông tin chi tiết của bạn, và chúng tôi sẽ gửi hàng đi ngay lập tức!</p>

<!-- Thêm validation summary -->
<div asp-validation-summary="All" class="text-danger font-weight-bold"></div>

<form asp-action="Checkout" method="post">
    <h3>Thông tin liên hệ</h3>
    <div class="form-group">
        <label>Tên người nhận (Name):</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <!-- BỔ SUNG: Email -->
    <div class="form-group">
        <label>Email:</label>
        <input asp-for="Email" class="form-control" type="email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    
    <!-- BỔ SUNG: Số điện thoại -->
    <div class="form-group">
        <label>Số điện thoại:</label>
        <input asp-for="PhoneNumber" class="form-control" type="tel" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <h3 class="mt-4">Địa chỉ giao hàng (Ship to)</h3>
    <div class="form-group">
        <label>Dòng 1 (Line 1):</label>
        <input asp-for="Line1" class="form-control" />
        <span asp-validation-for="Line1" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Dòng 2 (Line 2):</label>
        <input asp-for="Line2" class="form-control" />
    </div>
    <div class="form-group">
        <label>Dòng 3 (Line 3):</label>
        <input asp-for="Line3" class="form-control" />
    </div>
    <div class="form-group">
        <label>Thành phố (City):</label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Vùng/Tỉnh (State):</label>
        <input asp-for="State" class="form-control" />
    </div>
    <div class="form-group">
        <label>Mã Zip (Zip):</label>
        <input asp-for="Zip" class="form-control" />
    </div>
    <div class="form-group">
        <label>Quốc gia (Country):</label>
        <input asp-for="Country" class="form-control" />
        <span asp-validation-for="Country" class="text-danger"></span>
    </div>
    
    <h3 class="mt-4">Tùy chọn</h3>
    <div class="checkbox">
        <label>
            <input asp-for="GiftWrap" /> Gói quà (Gift wrap these items)
        </label>
    </div>
    
    <div class="text-center mt-4">
        <input class="btn btn-primary btn-lg" type="submit" value="Hoàn tất Đơn hàng" />
    </div>
</form>

<!-- Bổ sung scripts cho Client-side Validation -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}